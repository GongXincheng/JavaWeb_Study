<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 构造方法注入 -->
	<bean id="userId" class="com.f_xml.a_constructor.User">
		
		<!-- 此方法开发中用的不多
			<constructor-arg name="username" value="GXC"></constructor-arg>
			<constructor-arg name="age" value="21"></constructor-arg> 
		-->
		
		<!-- 
			index: 参数的索引号 (从0开始)
			 type:	参数的类型
		-->
		<constructor-arg index="0" type="java.lang.String" value="GXC"></constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="21"></constructor-arg>
	</bean>
</beans>