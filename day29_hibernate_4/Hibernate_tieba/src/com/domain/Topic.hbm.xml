<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="com.domain">
	<class name="Topic" table="t_Topic">
		<id name="tid" column="tid">
			<generator class="native"></generator>
		</id>
		<property name="title" type="string"></property>
		<property name="topicContent" type="string"></property>
		<property name="ipAddr" type="string"></property>
		<property name="lastReplyDate" type="calendar"></property>
		<property name="createDate" type="calendar"></property>
	
		<set name="replySet">
			<key column="tid"/>
			<one-to-many class="Reply"/>
		</set>
	</class>
</hibernate-mapping>